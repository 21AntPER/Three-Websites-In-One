<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= queryString %></title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="shortcut icon" type="image/x-icon" href="/scufftube_logo.png">
</head>
<body>
    <%- include('./partials/navbar')%>
    <br>

    <ul id="query-wrapper">
        <% if (filtered.length > 0) { %>
            <% filtered.forEach( (item) => { %>
                <% console.log(filtered.views) %>
                <% if (item.thumbnail != "") { %>
                    <a href="/videos/<%= item._id %>">
                        <li class="query-listITEM">
                            <div class="queryDELETE-Thumbnail-container">
                                <img src=" <%= item.thumbnail %>" class="query-Thumbnail">
                            </div>    
                            <p class="query-text">
                                <%= item.title %>
                                <br>
                                <%= viewsCalc(item.views) %>
                                <br><br>
                                <% var FULLdate = new Date(item.createdAt).toDateString().split(' ') %>
                                <% var dateString = `${FULLdate[1]} ${FULLdate[2]}, ${FULLdate[3]}` %>
                                <%= dateString %>
                            </p>
                        </li>
                    </a>
                <% } %>
            <% } ) %>
        <% } %>
    </ul>

    <%- include('./partials/searchbar') %>

</body>
</html>